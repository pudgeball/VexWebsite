<!DOCTYPE html>
<html>
<head>
  <title>VexWebsite</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="banner">
    <div id="logo">
      <%= link_to image_tag("vexlogo.jpg"), root_path %>
    </div>
    <div id="menu">
      <ul>
        <%= render("renders/menu") %>
      </ul>
    </div>
  </div>
  <div id="content" style="height:100%;">
  	<div>
      <h1><%= @page_title || "HDSB: Vex" %></h1>
    </div>
    <%= yield %>
  </div>
  <div id="created">
    <p>Created by <%= mail_to 'mikkel@mikkelharris.com', "Mikkel Harris" %> & <%= mail_to 'nick@nickmcguire.com', "Nick McGuire"%></p>
  </div>
</body>
</html>
