<!DOCTYPE html>
<html>
<head>
  <title>Vex</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render_analytics %>
</head>
<body>
  <div id="banner">
    <div class="container">
      <div id="logo">
        <%= link_to image_tag("vexlogo.jpg"), root_path %>
      </div>
      <div id="title">
        <p><%= @page_title || "HDSB: Vex" %></p>
      </div>
      <div id="menu">
        <ul>
          <%= render("renders/menu") %>
        </ul>
      </div>
    </div>
  </div>
  <div id="content">
	  <div class="container">
		  <%= yield %>
	  </div>
  </div>
  <div id="created">
    <p>Created by <%= mail_to 'mikkel@mikkelharris.com', "Mikkel Harris" %> & <%= mail_to 'nick@nickmcguire.com', "Nick McGuire"%></p>
  </div>
</body>
</html>