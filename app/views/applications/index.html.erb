<h1>Listing <%= t("activerecord.attributes.application.title").pluralize%></h1>

<table>
  <tr>
    <th><%= t("activerecord.attributes.application.teamName") %></th>
    <th><%= t("activerecord.attributes.application.userName") %></th>
    <th><%= t("activerecord.attributes.application.userEmail") %></th>
    <th><%= t("activerecord.attributes.application.schoolName") %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @applications.each do |application| %>
  <tr>
    <td><%= application.teamName %></td>
    <td><%= application.userName %></td>
    <td><%= mail_to application.userEmail %></td>
    <td><%= application.schoolName %></td>
    <td><%= link_to 'Show', application %></td>
    <td><%= link_to 'Edit', edit_application_path(application) %></td>
    <td><%= link_to 'Destroy', application, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Application', new_application_path %>

<ul>
  <%= render( @applications ) %>
</ul>
