<h1>Listing users</h1>

<table>
  <tr>
    <th>Role</th>
    <th>Email</th>
    <th>Name</th>
    <th>School</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.role %></td>
    <td><%= mail_to user.email %></td>
    <td><%= user.name %></td>
    <td><%= link_to user.school.name, school_path(user.school) %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

