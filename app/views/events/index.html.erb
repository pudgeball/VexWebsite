<h1>Listing <%= t("activerecord.attributes.event.title").pluralize %></h1>

<table>
  <tr>
    <th><%= t("activerecord.attributes.event.region") %></th>
    <th><%= t("activerecord.attributes.event.name") %></th>
    <th><%= t("activerecord.attributes.event.date") %></th>
    <th><%= t("activerecord.attributes.event.spotsAvailable") %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.region %></td>
    <td><%= event.name %></td>
    <td><%= event.date %></td>
    <td><%= event.spotsAvailable %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

